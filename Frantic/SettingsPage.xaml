<Page
    x:Class="Frantic.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- Кнопка открытия панели -->
        <Button x:Name="OpenColorPanelButton"
                Content="🎨"
                FontSize="24"
                Background="Transparent"
                BorderBrush="Transparent"
                Foreground="White"
                Width="48"
                Height="48"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="8"
                Click="OpenColorPanelButton_Click"/>

        <!-- SplitView с панелью СЛЕВА -->
        <SplitView x:Name="ColorPanel"
                   PanePlacement="Left"
                   DisplayMode="Overlay"
                   IsPaneOpen="False"
                   OpenPaneLength="200 ">
            <SplitView.Pane>
                <ScrollViewer>
                    <StackPanel x:Name="ColorsContainer" Background="#18171C">
                        <TextBlock Text="Цвета панели"
                               FontSize="18"
                               Foreground="White"
                               Margin="16,16,0,16"/>
                    </StackPanel>
                </ScrollViewer>
            </SplitView.Pane>
            <Grid>
                <TextBlock Text="Настройки" FontSize="24" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </SplitView>
    </Grid>
</Page>