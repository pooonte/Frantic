<Page
    x:Class="Frantic.photo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Frantic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot Title="Фототека">
            <PivotItem Header="Галерея фото">
                <ListView x:Name="PhotoList" ItemClick="GalleryPhoto_Click" IsItemClickEnabled="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Thumbnail}" Width="150" Height="150" Stretch="UniformToFill" Margin="4"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Margin" Value="8"/>
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="Background" Value="8"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </PivotItem>
            <PivotItem Header="Папки">
                <!--<GridView x:Name="Folders" ItemClick="FoldersPhoto_Click" IsItemClickEnabled="true"/>-->
            </PivotItem>
        </Pivot>
        <Frame x:Name="ContentFrame"/>
    </Grid>
</Page>
